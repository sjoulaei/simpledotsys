
#!/bin/bash
#just copy the content of this file into the userdata window of Digital Ocean droplet when creating it.
#update user name and password to your own.
username=my-username
password=my-p@ssw0rd!
cd /opt/
curl -O curl -O https://raw.githubusercontent.com/sjoulaei/simpledotsys/master/addsuser.sh
chmod u+x addsuser.sh
sh addsuser.sh $username $password

yum -y install git

su $username << 'EOF'
cd /home/$username/
git clone https://github.com/sjoulaei/simpledotsys.git
cd simpledotsys
sh install.sh
EOF
